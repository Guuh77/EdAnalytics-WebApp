@page
@model EdAnalytics.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Dashboard Ed-Analytics</h1>
    <p>Análise de dados para plataformas EAD.</p>
</div>

<div class="mt-5">
    <h4>Cursos Mais Acessados</h4>
    <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Posição</th>
                <th>Título do Curso</th>
                <th>Área</th>
                <th>Visualizações</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.CursosMaisVistos.Count; i++)
            {
                var curso = Model.CursosMaisVistos[i];
                <tr>
                    <td>@(i + 1)º</td>
                    <td>@curso.Titulo</td>
                    <td>@curso.Area</td>
                    <td>@curso.Visualizacoes.ToString("N0")</td>
                </tr>
            }
        </tbody>
    </table>
</div>